@model IList<YangKai.BlogEngine.Domain.Channel>
<!doctype html>
<html ng-cloak ng-app="app-admin" class="no-js" ng-controller="GlobalController">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>iShare Management</title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/style/css")
    <script src="/Content/js/modernizr-2.6.2.min.js"></script>
    <style>
        .breadcrumb {border-left-color: #3a87ad;}
        ::-moz-selection {background: #d9edf7;}
        ::selection {background: #d9edf7;}
        ::-webkit-selection {background: #d9edf7;}      
    </style>
</head>
<body>
<header class="navbar navbar-inverse navbar-fixed-top">
    <nav class="navbar-inner">
