            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="/admin/#!/"><img src="/Content/img/logo.gif" />iShare Management</a>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li><a ng-href="/admin/#!/">Article</a></li>
                    <li><a ng-href="/admin/#!/">Comment</a></li>
                    <li><a ng-href="/admin/#!/">Board</a></li>
                    <li><a ng-href="/admin/#!/channel">Channel</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <div class="content">
            <div ng-view></div>
        </div>
    </div>
    @Scripts.Render("~/admin/js")
</body>
</html>