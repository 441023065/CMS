<!doctype html>
<html ng-cloak ng-app="app-login">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>iShare - Login</title>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/style/css")
        <script src="/Content/js/modernizr-2.6.2.min.js"></script>
    </head>
    <body ng-controller="LoginController">
        <div class="container">
            <div class="span3 hidden-phone"></div>
            <div class="span6">
                <form name="form" class="form-horizontal well" ng-submit="login()">
                    <fieldset>
                        <legend>iShare Login</legend>
                        <div class="container">
                            <div class="content">
                                <div class="control-group">
                                    <label class="control-label">User Name</label>
                                    <div class="controls">
                                        <span class="input-group">
                                            <input type="text" placeholder="Username" ng-model="user.Username" required />
                                        </span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Password</label>
                                    <div class="controls">
                                        <span class="input-group">
                                            <input type="password" placeholder="Password" ng-model="user.Password" required />
                                        </span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label"></label>
                                    <div class="controls">
                                        <label class="checkbox">
                                            <input type="checkbox" ng-init="user.IsRemember=false" ng-model="user.IsRemember" />Remember me
                                        </label>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label"></label>
                                    <div class="controls">
                                        <button class="btn btn-info" ng-disabled="submitting || form.$invalid">Sign in</button>
                                        <span class="loading" ng-show="submitting">signing...</span>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="span3 hidden-phone"></div>
        </div>
    @Scripts.Render("~/js")
    </body>
</html>