@model IList<YangKai.BlogEngine.Domain.Channel>
<!doctype html>
<html ng-cloak ng-app="app" class="no-js" ng-controller="GlobalController">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title ng-bind="'iShare - '+title">iShare</title>
        <meta name="viewport" content="width=device-width" />
        <link rel="alternate" type="application/rss+xml" title="RSS 2.0 - 所有文章" href="@YangKai.BlogEngine.Common.Config.Path.ARTICLES_RSS_PATH" />
        <link rel="alternate" type="application/rss+xml" title="RSS 2.0 - 所有评论" href="@YangKai.BlogEngine.Common.Config.Path.COMMENTS_RSS_PATH" />
        @Styles.Render("~/Content/style/css")
        <script src="/Content/js/modernizr-2.6.2.min.js"></script>
        <!--[if lt IE 7]>
            <script>
                window.onload=(function () {
                    document.open();
                    document.clear();
                    document.close();
                    document.write("<div style='text-align: center;color: #ffb7b7;'>");
                    document.write("<h1>矮油！浏览器好像不太对劲.</h1>");
                    document.write("<h4>您看到这个页面，说明您目前正在使用 IE6 浏览器.</h4>");
                    document.write("<h4>我们建议您升级至 IE7/8/9/10 或切换至<a href='http://browsehappy.com/'>现代浏览器</a>，以浏览本网站.</h4>");
                    document.write("<h2><img src='/Content/img/no-ie.jpg'' /></h2>");
                    document.write("</div>");
                });
            </script>
        <![endif]-->
    </head>
    <body>
        @Html.Partial("layout-header", Model)
        <div id="cta-content" ng-show="showBanner" style="display: none;">
            <div class="lights">
                <div class="grid-image">
                    <div class="wrapped-content">
                        <h1>技术宅拯救世界</h1>
                        <h2>
                            BECAUSE WE CAN
                            <p class="bottom clearfix">{{word}}</p>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="content">
                <div ng-view></div>
            </div>
            <hr>
            @Html.Partial("layout-footer")
        </div>
        @Scripts.Render("~/js")
        <script>
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-21831838-1']);
            _gaq.push(['_setDomainName', 'woshinidezhu.com']);
            _gaq.push(['_setAllowLinker', true]);
            _gaq.push(['_trackPageview']);
            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    </body>
</html>