    ViewBag.Title = string.Format(YangKai.BlogEngine.Common.Config.Format.PAGE_TITLE, "首页");
}

@section banner
{
    <div id="cta-content">
        <div class="lights">
            <div class="grid-image">
                <div class="wrapped-content">
                    <h1>Share Link Fun</h1>
