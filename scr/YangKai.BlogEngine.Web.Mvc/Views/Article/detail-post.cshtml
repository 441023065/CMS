@model YangKai.BlogEngine.Web.Mvc.Models.PostViewModel
           
@if (YangKai.BlogEngine.Common.WebMasterCookie.IsLogin)
{
    <div id="addpost" class="_add"><a href="/admin/postmanage/new">添加新文章</a></div>
    <div class="clear"></div>
}

<ul id="posts">
    <li id="@("list" + Model.PostId)">

        @Html.Partial("detail-post-title", Model)
        @Html.Partial("detail-post-header", Model)
        @Html.Partial("detail-post-body", Model)
        @Html.Partial("detail-post-footer", Model)
        @Html.Partial("_jiathis")
    </li>
</ul>



