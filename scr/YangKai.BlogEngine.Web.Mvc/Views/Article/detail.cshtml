@model YangKai.BlogEngine.Web.Mvc.Models.PostViewModel
    
@section scripts{
    <script type="text/javascript" >
        var jiathis_config = {
            data_track_clickback: true,
            siteNum: 15,
            summary: "",
            hideMore: true
        }
    </script>
    <script type="text/javascript" src="http://v2.jiathis.com/code/jia.js?uid=902651" charset="utf-8"></script>
}

<ul class="breadcrumb">
    <li><a href="/@Model.ChannelUrl">@Model.ChannelName</a></li>
    <li><a href="/@Model.GroupUrl">@Model.GroupName</a></li>
    <li class="active">@Model.Title</li>
</ul>

@Html.Partial("detail-post", Model)
@Html.Action("detail-related", new { postId = Model.PostId })
