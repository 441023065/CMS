@*菜单效果*@
<script type="text/javascript">
    $(function() { menu(); });

    function menu() {
        var d = 300;
        $('#menu a').each(function() {
            $(this).stop().animate({
                'marginTop': '-80px'
            }, d += 150);
        });
        $('#menu > li').hover(
            function() {
                $('a', $(this)).stop().animate({
                    'marginTop': '-2px'
                }, 200);
            },
            function() {
                $('a', $(this)).stop().animate({
                    'marginTop': '-80px'
                }, 200);
            });
    }
</script>
<style>
    ul#menu li a {padding-top:80px; margin-top:-80px }
    ul#menu .home a{background-image: url(/Content/Image/menu/home.png);}
