@model YangKai.BlogEngine.Web.Mvc.Models.PostViewModel

<div class="postHeader">
	<span class="date">@Model.PubDate.ToString("yyyy年MM月dd日")</span>
	<span class="author">@Model.Author</span>
    @if (YangKai.BlogEngine.Common.WebMasterCookie.IsLogin)
    {
    <span class="editpost"><a href="/admin/postmanage/edit/@Model.Url">编辑</a></span>
    }
    <span class="comments">@(Model.ReplyCount > 0 ? Model.ReplyCount + " 条评论" : "没有评论")</span>
    <span class="reviews">@Model.ViewCount 次点击</span>
	<div class="clear"></div>
</div>